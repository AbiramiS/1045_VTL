<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/androidlogo">
<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:orientation="horizontal" android:id="@+id/base" android:weightSum="1">
</LinearLayout>

<Button android:layout_height="wrap_content" android:text="@string/Proceed" android:layout_width="match_parent" android:id="@+id/status" android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/textView2"></Button>
<TextView android:text="@string/instructions" android:id="@+id/textView2" android:textSize="20dp" android:layout_height="wrap_content" android:textColor="#000000" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_marginTop="48dp"></TextView>
<TextView android:text="@string/instructions1" android:textColor="#000000" android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/textView2" android:layout_alignParentLeft="true" android:layout_marginLeft="16dp" android:layout_marginTop="39dp"></TextView>
<TextView android:text="@string/instructions2" android:textColor="#000000" android:id="@+id/textView3" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/textView1" android:layout_alignLeft="@+id/textView1" android:layout_marginTop="19dp"></TextView>
<TextView android:text="@string/instructions3" android:textColor="#000000" android:id="@+id/textView4" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/textView3" android:layout_alignLeft="@+id/textView3" android:layout_marginTop="25dp"></TextView>
<TextView android:text="@string/instructions4" android:id="@+id/textView6" android:layout_height="wrap_content" android:textColor="#000000" android:layout_width="wrap_content" android:layout_below="@+id/textView4" android:layout_marginTop="24dp" android:layout_alignLeft="@+id/textView4"></TextView>
<TextView android:text="@string/instructions5" android:id="@+id/textView5" android:layout_height="wrap_content" android:textColor="#000000" android:layout_width="wrap_content" android:layout_below="@+id/textView6" android:layout_alignLeft="@+id/textView6" android:layout_marginTop="24dp"></TextView>

</RelativeLayout>